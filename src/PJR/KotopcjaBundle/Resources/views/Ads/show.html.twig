{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ads</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Adtitle</th>
                <td>{{ entity.adTitle }}</td>
            </tr>
            <tr>
                <th>Adcontents</th>
                <td>{{ entity.adContents }}</td>
            </tr>
            <tr>
                <th>Adpictureid</th>
                <td>{{ entity.adPictureId }}</td>
            </tr>
            <tr>
                <th>Addate</th>
                <td>{{ entity.adDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('ads') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('ads_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
