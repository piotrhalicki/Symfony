{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Comments</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Commentfrom</th>
                <td>{{ entity.commentFrom }}</td>
            </tr>
            <tr>
                <th>Commentpostid</th>
                <td>{{ entity.commentPostId }}</td>
            </tr>
            <tr>
                <th>Commentcontents</th>
                <td>{{ entity.commentContents }}</td>
            </tr>
            <tr>
                <th>Commentdate</th>
                <td>{{ entity.commentDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('comments') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('comments_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
